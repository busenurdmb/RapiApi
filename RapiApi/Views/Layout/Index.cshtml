</head>
<body>

	<div class="super_container">

		<!-- Header -->
		<header class="header">
			<div class="container">
				<div class="row">
					<div class="col">
						<div class="header_content d-flex flex-row align-items-center justify-content-start">
							<div class="logo">
								<a href="#">
									<div>Major</div>
									<div>5 * Hotel</div>
								</a>
							</div>
							<nav class="main_nav">
								<ul class="d-flex flex-row align-items-center justify-content-start">
									<li><a href="index.html">Anasayfa</a></li>
									<li><a href="about.html">Hakkımızda</a></li>
									<li class="active"><a href="rooms.html">Odalarımız</a></li>
									<li><a href="blog.html">Yenilikler</a></li>
									<li><a href="contact.html">İletişim</a></li>
								</ul>
							</nav>
							<div class="header_extra d-flex flex-row align-items-center justify-content-start ml-auto">
								<div class="phone d-flex flex-row align-items-center justify-content-start"><i class="fa fa-phone" aria-hidden="true"></i><span>652-345 3222 11</span></div>
								<div class="book_button trans_200"><a href="#">Rezervasyon Yap</a></div>
							</div>
							<div class="hamburger ml-auto"><i class="fa fa-bars" aria-hidden="true"></i></div>
						</div>
					</div>
				</div>
			</div>
		</header>

		<!-- Menu -->

		<div class="menu">
			<div class="background_image" style="background-image:url(images/menu.jpg)"></div>
			<div class="menu_content d-flex flex-column align-items-center justify-content-center">
				<ul class="menu_nav_list text-center">
					<li><a href="index.html">Anasayfa</a></li>
					<li><a href="about.html">Hakkımızda</a></li>
					<li><a href="rooms.html">Odalarımız</a></li>
					<li><a href="news.html">Yenililiker</a></li>
					<li><a href="contact.html">İletişim</a></li>
				</ul>
				<div class="menu_review"><a href="#">Rezervasyon Yap</a></div>
			</div>
		</div>

		<!-- Home -->

		<div class="home">
			<div class="parallax_background parallax-window" data-parallax="scroll" data-image-src="https://www.tollbrothers.com/blog/wp-content/uploads/2023/10/Tamiami-Farmhouse_Pool-Daylight-3.jpeg" data-speed="0.8"></div>
			<div class="home_container">
				<div class="container">
					<div class="row">
						<div class="col">
							<div class="home_content text-center">
								<div class="home_title"><h1>Odalarımız</h1></div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Search Box -->

		<div class="search_box">
			<div class="container">
				<div class="row">
					<div class="col">
						<div class="search_box_container d-flex flex-row align-items-center justify-content-start">
							<div class="search_form_container">
								<form asp-action="Index" asp-controller="Booking" method="post" id="search_form" class="search_form">
									<div class="search_dropdown d-flex flex-row align-items-center justify-content-start">
										<span>Şehir</span>
										<i class="fa fa-chevron ml-2" aria-hidden="true"></i>
										<input type="text" class="form-control col-12" name="city" placeholder="Şehir ismi giriniz..." />
									</div>
									<br />
									<div class="d-flex flex-lg-row flex-column align-items-center justify-content-start">
										<ul class="search_form_list d-flex flex-row align-items-center justify-content-start flex-wrap">
											<li class="search_dropdown d-flex flex-row align-items-center justify-content-start date-input">
												<span>Giriş</span>
												<i class="fa fa-chevron ml-2" aria-hidden="true"></i>
												<input type="date" name="CheckinDate" class="form-control" />
											</li>
											<li class="search_dropdown d-flex flex-row align-items-center justify-content-start date-input">
												<span>Çıkış</span>
												<i class="fa fa-chevron ml-2" aria-hidden="true"></i>
												<input type="date" name="CheckoutDate" class="form-control" />
											</li>
											<li class="search_dropdown d-flex flex-row align-items-center justify-content-start small-input">
												<span>Misafir Sayısı</span>
												<i class="fa fa-chevron ml-auto" aria-hidden="true"></i>
												<select name="AdultsNumber" class="form-control">
													@for (int i = 0; i <= 29; i++)
													{
														<option value="@i">@i</option>
													}
												</select>
											</li>
											<li class="search_dropdown d-flex flex-row align-items-center justify-content-start small-input">
												<span>Çocuk Sayısı</span>
												<i class="fa fa-chevron ml-auto" aria-hidden="true"></i>
												<select name="ChildrenNumber" class="form-control">
													@for (int i = 0; i <= 29; i++)
													{
														<option value="@i">@i</option>
													}
												</select>
											</li>
											<li class="search_dropdown d-flex flex-row align-items-center justify-content-start small-input">
												<span>Oda Sayısı</span>
												<i class="fa fa-chevron ml-auto" aria-hidden="true"></i>
												<select name="RoomNumber" class="form-control">
													@for (int i = 0; i <= 29; i++)
													{
														<option value="@i">@i</option>
													}
												</select>
											</li>
										</ul>
										<button class="search_button">Otel Ara</button>
									</div>

									

									<style>
										.search_form_list .search_dropdown {
											margin-right: 10px; /* Alanlar arasında boşluk bırakır */
										}

										.search_form_list .date-input {
											flex: 2; /* Tarih alanları daha geniş */
										}

										.search_form_list .small-input {
											flex: 1; /* Diğer alanlar daha dar */
										}

										.search_form_list .form-control {
											width: 100%;
										}
									</style>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
@RenderBody()

		<div class="room d-flex flex-lg-row flex-column align-items-start justify-content-start">
